{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "feat", "breaking": true, "release": "major" },
          { "type": "fix", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "test", "release": "patch" },
          { "type": "chore", "release": "patch" },
          { "type": "optimize", "release": "minor" },
          { "type": "perf", "release": "minor" },
          { "type": "security", "release": "patch" },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ğŸš€ Features", "hidden": false },
            { "type": "optimize", "section": "âš¡ Performance", "hidden": false },
            { "type": "perf", "section": "âš¡ Performance", "hidden": false },
            { "type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false },
            { "type": "security", "section": "ğŸ”’ Security", "hidden": false },
            { "type": "docs", "section": "ğŸ“š Documentation", "hidden": false },
            { "type": "chore", "section": "ğŸ”§ Maintenance", "hidden": false },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring", "hidden": false },
            { "type": "style", "section": "ğŸ’ Code Style", "hidden": false },
            { "type": "test", "section": "âœ… Tests", "hidden": false },
            { "type": "build", "section": "ğŸ“¦ Build System", "hidden": false },
            { "type": "ci", "section": "ğŸ”„ CI/CD", "hidden": false }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "releasedLabels": false
      }
    ]
  ]
}
